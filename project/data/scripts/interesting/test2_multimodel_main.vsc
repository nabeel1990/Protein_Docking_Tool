%%%%% UCITAVANJE PDB-ova %%%%%
% create pdb={data/pdbOutput/testPdb_5_models.pdb} name={pdbModel} radiusPath={data/system/atmtypenumbers} radiusType={united} center={false} centerType={qwe}
create pdb={data/pdbOutput/outPdb_aligned1ay7_reversed_105.pdb} name={pdbModel} radiusPath={data/system/atmtypenumbers} radiusType={united} center={false} centerType={qwe}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%% UCITAVANJE MESH-eva %%%%%
create mesh={data/models/sphere.dat} type={dat} center={true} autoScale={1.0}
create mesh={data/models/stick.dat} type={dat} center={true} autoScale={1.0}

create mesh={data/models/coordinate_system.dat} type={dat} name={coordSystem} center={false} autoScale={100.0}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%% STVARANJE VARIJABLI %%%%%
create variable={nodeModePdb} type={ulonglong} value={0x0001000000000105}
create variable={nodeModeColorAtoms} type={ulonglong} value={0x0000000000001105}

create variable={nodeModeCoordSystem} type={ulonglong} value={0x0001000000000005}

create variable name={increment} type={double} value={3.0}
create variable name={rotationx} type={double} value={0.0}
create variable name={rotationy} type={double} value={0.0}
create variable name={rotationz} type={double} value={0.0}
create variable name={incrementx} type={double} value={0.0}
create variable name={incrementy} type={double} value={0.0}
create variable name={incrementz} type={double} value={0.0}

create variable name={colorPdb} type={color} value={0 255 0 255}
create variable name={colorCoordSystem} type={color} value={255 255 0 255}

create variable name={vecLook1} type={vector3} value={0.0 0.0 -180.0}
create variable name={vecPoint1} type={vector3} value={0.0 0.0 0.0}
create variable name={vecUp1} type={vector3} value={0.0 1.0 0.0}

create variable name={rotationScriptPath} type={string} value={data/scripts/interesting/test2_rotation_script.vsc}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%% STVARANJE NODE-ova %%%%%
create node name={nodeLook1} nodeType={lookat} nodeParams={vecLook1 vecPoint1 vecUp1}
	create node name={nodeRotX} nodeType={rotationx} nodeParams={rotationx} parent={nodeLook1}
		create node name={nodeRotY} nodeType={rotationy} nodeParams={rotationy} parent={nodeRotX}
			create node name={nodeRotZ} nodeType={rotationz} nodeParams={rotationz} parent={nodeRotY}
%				create node name={nodeRotationScript} nodeType={script} nodeParams={rotationScriptPath} parent={nodeRotZ}
					create node name={nodeColor} nodeType={color} nodeParams={colorPdb} parent={nodeRotZ}
						create node name={nodePdb} nodeType={pdb} nodeParams={pdbModel sphere stick nodeModePdb} parent={nodeColor}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%% STVARANJE VIEW-ova %%%%%
create view name={view1} nodeParams={nodeLook1}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

